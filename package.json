{
  "name": "mini-multi-scripts",
  "version": "0.0.0",
  "private": true,
  "type": "module",
  "description": "Monorepo containing the banner main script and the optional live locator.",
  "workspaces": [
    "packages/*"
  ],
  "scripts": {
    "dev": "npm-run-all -p dev:main dev:live-locator",
    "build": "node scripts/build.mjs",
    "serve": "npm run preview --workspace @banner/main",
    "dev:main": "npm run dev --workspace @banner/main",
    "dev:live-locator": "npm run dev --workspace @banner/live-locator",
    "lint": "npm run lint --workspaces --if-present"
  },
  "keywords": [],
  "author": "",
  "license": "MIT",
  "devDependencies": {
    "@types/node": "^24.8.1",
    "npm-run-all2": "^5.0.0"
  }
}
