{
  "name": "mini-multi-scripts",
  "version": "0.0.0",
  "private": true,
  "type": "module",
  "description": "Monorepo containing the banner main script and the optional live editor.",
  "workspaces": [
    "packages/*"
  ],
  "scripts": {
    "dev": "npm-run-all -p dev:main dev:live-editor",
    "build": "node scripts/build.mjs",
    "dev:main": "npm run dev --workspace @banner/main",
    "dev:live-editor": "npm run dev --workspace @banner/live-editor",
    "lint": "npm run lint --workspaces --if-present"
  },
  "keywords": [],
  "author": "",
  "license": "MIT",
  "devDependencies": {
    "npm-run-all": "^4.1.5"
  }
}
